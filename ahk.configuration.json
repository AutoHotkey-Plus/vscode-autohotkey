{
    "comments": {
        "lineComment": ";",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        {
            "open": "/*",
            "close": "\n\n*/",
            "notIn": ["string"]
        }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["%", "%"]
    ],
    // Folding regions marked by ";region" and ";endregion" comments.
    "folding": {
        "markers": {
            "start": "^\\s*\\;\\s*region\\b",
            "end": "^\\s*\\;\\s*endregion\\b"
        }
    }
}
